{{#partial "content"}}
    <form class="form-group" action="/squads" method="post">
        <h4>CREATE NEW SQUAD:</h4>
        <label for="name">NAME:</label>
        <input class="form-control" id="name" name="name" type="text" placeholder="Please enter squad name" required>
        <label for="size">Squad size:</label>
        <input class="form-control" id="size" name="size" type="number" placeholder="Please enter squad size" required>
        <label for="cause">PURPOSE:</label>
        <input class="form-control" id="cause" name="cause" type="text" placeholder="Please enter squad's purpose" required>

        <button type="submit" class="btn btn-success">CREATE!</button>
    </form>
{{/partial}}

{{> layout.hbs}}