{{#partial "content"}}
    {{#if heroes}}
        <ul>
            {{#each heroes}}
                <li class="card col-lg-6">
                    <h3 class="card-title" id="hero">Name:{{name}}</h3>
                    <a href="/heroes/{{id}}" class="btn btn-outline-warning">Info</a>
                    <a href="/squads/{{squadId}}" class="btn btn-outline-success">View squad</a>
                </li>
                <br><br>

            {{/each}}
        </ul>

        {{else}}
        <div class="card col-lg-8">
            <p class="card-text" id="squad" style="font-size: 22px">You don't have any Heroes</p>
        </div>
        <br><br>
    {{/if}}
    <h3>Let's create some heroes shall we??</h3>
    <a href="/heroes/new" class="btn btn-lg btn-outline-primary col-md-5">Create </a>

{{/partial}}

{{> layout.hbs}}
