{{#partial "content"}}
    <form class="form-group" action="/heroes" method= post>
        <h3>LET'S CREATE SOME HEROES TO ADD IN THE SQUAD :</h3>
        <label for="name">NAME: </label>
        <input class="form-control" id="name" name="name" type="text" placeholder="Please enter the name of the hero" required>
        <label for="age">AGE: </label>
        <input class="form-control" id="age" name="age" type="number" placeholder="Please enter your hero's age" required>
        <label for="strength">STRENGTH: </label>
        <input class="form-control" id="strength" name="strength" type="text" placeholder="Please enter your hero's power" required>
        <label for="weakness">WEAKNESS: </label>
        <input class="form-control" id="weakness" name="weakness" type="text" placeholder="Please enter your hero's weakness" required>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <label for="squadId" class="input-group-text"> SQUAD: </label>
            </div>
            <select class="custom-select" id="squadId" name="squadId" required>
                {{#each squads}}
                <option value="{{id}}">{{name}}</option>
                {{/each}}
            </select>
            </div>
        <button type="submit" class="btn btn-primary"> CREATE</button>
    </form>
{{/partial}}

{{> layout.hbs}}